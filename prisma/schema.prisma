generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String    @id @default(uuid())
  clerkId   String    @unique
  name      String
  email     String    @unique
  role      UserRole  @default(USER)
  firstName String
  lastName  String
  imageUrl  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}